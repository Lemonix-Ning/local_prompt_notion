{
  "name": "local-prompt-notion",
  "version": "1.0.0",
  "type": "module",
  "description": "本地优先的 AI 卡片与任务工作台",
  "main": "index.js",
  "scripts": {
    "dev": "set VITE_USE_MOCK=true && vite",
    "dev:client": "set VITE_USE_MOCK=true && vite --port 3000 --strictPort",
    "dev:client:api": "set VITE_USE_MOCK=false && vite --port 3000 --strictPort",
    "dev:server": "set PORT=3001 && set VAULT_PATH=%cd%\\vault && npm --prefix server start",
    "dev:api": "concurrently -k -n server,client -c blue,green \"npm run dev:server\" \"npm run dev:client:api\"",
    "seed:vault": "node scripts/seed-vault.cjs",
    "build": "tsc && vite build",
    "build:analyze": "npm run build && node scripts/analyze-bundle.mjs",
    "perf:baseline": "npm run build && node scripts/measure-baseline.mjs",
    "perf:write-state": "node scripts/write-current-state.mjs",
    "perf:merge": "node scripts/merge-runtime-metrics.mjs",
    "preview": "vite preview",
    "lint": "node -e \"console.log('lint skipped: no eslint config in repo')\"",
    "cleanup": "node scripts/cleanup-temp-folders.cjs",
    "check:desktop": "node scripts/check-desktop-build.cjs",
    "tauri": "tauri",
    "desktop:dev": "npm run tauri dev",
    "desktop:build": "npm run tauri build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:countdown": "vitest run src/__tests__/utils/countdownManager.test.ts src/__tests__/hooks/useCountdownManager.test.tsx",
    "test:perf": "vitest run src/__tests__/performance/countdown.perf.test.ts",
    "test:integration": "vitest run src/__tests__/integration/countdown-system.test.tsx"
  },
  "keywords": [
    "prompt",
    "management",
    "local-first",
    "notion-like"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-autostart": "^2.3.0",
    "@tauri-apps/plugin-notification": "^2.3.3",
    "framer-motion": "^12.29.0",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.9.6",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "@yao-pkg/pkg": "^5.13.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.32",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^3.3.6",
    "terser": "^5.46.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.7",
    "vitest": "^1.0.4"
  }
}
